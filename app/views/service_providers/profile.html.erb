<div class="content">
	<div class="panel panel-inverse">
	    <div class="panel-heading">
	        <div class="panel-heading-btn">
	            <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-default" data-click="panel-expand" data-original-title="" title=""><i class="fa fa-expand"></i></a>
	            <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-success" data-click="panel-reload"><i class="fa fa-repeat"></i></a>
	            <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-warning" data-click="panel-collapse"><i class="fa fa-minus"></i></a>
	            <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-danger" data-click="panel-remove" data-original-title="" title=""><i class="fa fa-times"></i></a>
	        </div>
	        <h4 class="panel-title">O seu perfil</h4>
	    </div>
	    <div class="panel-body">
			<div class="media media-lg">
				<a class="pull-left" href="javascript:;">
				<a class="pull-left" href="javascript:;">
					<%= image_tag current_user.photo, class: "media-object" %>
				</a>
					<!-- <img src="assets/img/gallery/gallery-1.jpg" alt="" class="media-object"> -->
				</a>
				<div class="media-body">
					<div class="media-body">
					<h4 class="media-heading"><%= current_user.name%></h4>
					<p><%= current_user.description%></p>
					<p><b>Email:</b> <%= current_user.email%></p>
					<p><b>Telefone:</b> <%= current_user.phone%></p>
					<p><b>Telemóvel:</b> <%= current_user.cell_phone%></p>
					<p><b>Data de Nascimento</b> <%= current_user.birth_date%></p>
					<p><b>Nacionalidade: </b> <%= current_user.nationality%></p>
					<p><b>Sexo:</b> <% if current_user.gender %>
						Masculino
						<%else%>
						Feminino
						<%end%></p>
					<p><b>Informação: </b>: <%= current_user.bio%></p>
				</div>
				</div>
			</div>
		</div>
	</div>
</div>


<div id="content" class="content">
			<!-- begin breadcrumb -->
			<!-- end breadcrumb -->
			<!-- begin page-header -->
			<!-- end page-header -->
			<!-- begin timeline -->
			<ul class="timeline">
				<% @services.order(:service_start).each do |s|%>
			    <li>
			        <!-- begin timeline-time -->
			        <div class="timeline-time">
			            <span class="date"><%= s.service_date%></span>
			            <span class="time"><%= s.service_start.strftime("%H:%M")%></span>
			        </div>
			        <!-- end timeline-time -->
			        <!-- begin timeline-icon -->
			        <div class="timeline-icon">
			            <a href="javascript:;"><i class="fa fa-home"></i></a>
			        </div>
			        <!-- end timeline-icon -->
			        <!-- begin timeline-body -->
			        <div class="timeline-body">
			            <div class="timeline-header">
			                <span class="userimage"><%= image_tag s.service_provider.user.photo%></span>
			                <span class="username"><a href="javascript:;"><%= s.service_provider.user.name%></a> <small></small></span>
			            </div>
			            <div class="timeline-content">
                            <p>
                                <strong>Cód. Postal:</strong>
			                      <%= s.zip_code %>
			                      <br/>
			                      <strong>Cidade:</strong>
			                      <%= s.city %>
			                      <br/>
			                      <strong>Rua:</strong>
			                      <%= s.street %>
			                      <br/>
			                      <strong>Info. Adicional:</strong>
			                      <%= s.additional_information %>
                            </p>
			            </div>
			            <div class="timeline-footer">
			            	<% if not s.ranking %>
			            		<a href="/services/rating" class="m-r-15"><i class="fa fa-thumbs-up fa-fw"></i> Avaliar</a>
			            	<% else %>
			            		<% (1..s.ranking.value).each do |v| %>
			            			<i class="fa fa-2x fa-star"></i>
			            		<% end %>
			            	<% end %>
			            </div>
			        </div>
			        <!-- end timeline-body -->
			    </li>
			  <%end%>
			</ul>
			<!-- end timeline -->
		</div>