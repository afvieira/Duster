<div class="table-responsive">
	<table id="data-table" class="table table-striped table-bordered">
		<thead>
			<tr>
				<th>Serviço</th>
				<th>Cliente</th>
				<th>Data</th>
				<th>Estado</th>
			</tr>
		</thead>

		<tbody>
			<% services.each do |service| %>
			<%if service[:state] == 3 %>
						<tr class="success">
				<%elsif%>
						<tr class="warning">
				<%end%>

					<td> 
				 		<% if service[:type] == 1 %>
									Engomadoria			
						<%elsif service[:type] == 2 %>
								   Limpeza Geral
						<%elsif service[:type] == 3 %>
									 Preparar Refeições
						<%elsif service[:type] == 4 %>
									Compras para o Lar	
						<%end%>						
					</td>
					<td>
						<%= service[:user] %>
					</td>

					<td>
						<%= service[:date] %> 
					</td>
					<td>
						<%if service[:state] == 3 %>
								Completado
						<%elsif%>
								Rejeitado
						<%end%>
					</td>
				</tr>	

			<%end%>
		</tbody>
	</table>
</div>