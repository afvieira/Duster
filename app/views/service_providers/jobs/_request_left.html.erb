<li class="media media-sm">
	<a class="pull-left" href="javascript:;">
		<img src=<%= service[:user][:photo] + "/all?random="+service[:id].to_s%>
		alt="" class="media-object rounded-corner" />
	</a>
	<div class="media-body">
		<h4 class="media-heading"><%= service[:user][:name] %></h4>
		<p>
		<% if service[:type] == 1 %>
		<span class="f-w-700">Serviço: </span>
		<span class="m-r-10"> Engomadoria</span>
		<%elsif service[:type] == 2 %>
		<span class="f-w-700">Serviço: </span>
		<span class="m-r-10"> Limpeza Geral </span>
		<span class="f-w-700">Divisões: </span>
		<span class="m-r-10"><%= service[:number_of_rooms]%> </span>
		<%elsif service[:type] == 3 %>
		<span class="f-w-700 ">Serviço: </span>
		<span class="m-r-10"> Preparar Refeições </span>
		<%elsif service[:type] == 4 %>
		<span class="f-w-700">Serviço: </span>
		<span class="m-r-10"> Compras para o Lar </span>
		
		<%end%>
		<span class="f-w-700">Morada: </span>
		<span class="m-r-10">
		<%= service[:district] %>,
		<%= service[:street] %>,
		<%= service[:door_number] %>,
		<%= service[:city]%>,
		<%= service[:zip_code]%>
		</span>
		
		<span class="f-w-700">Data: </span>
		<span class="m-r-5">
		Dia
		<span class="f-w-600">
		<%= service[:date] %>
		</span>
		das
		<span class="f-w-600">
		<%= service[:service_start].hour%>:
		<%= service[:service_start].min%>
		</span> as
		<span class="f-w-600">
		<%= service[:service_end].hour%>:
		<%= service[:service_end].min%>
		</span>
		</span>
		</p>
		<p>
		<span class="f-w-700">Informação extra:</span>
		<%= service[:additional_information]%>
		</p>
		<%= link_to "Informações",
		{controller: "/services",
		action: "profile",
		id: service[:id]},
		class:"btn btn-sm btn-info m-r-5"%>

		<%= link_to "Aceitar",
		{controller: "service_providers/jobs",
		action: "accept_job",
		id: service[:id]},
		class:"btn btn-sm btn-primary m-r-5"%>
		<%= link_to "Rejeitar",
		{controller: "service_providers/jobs",
		action: "reject_job",
		id: service[:id]},
		class:"btn btn-sm btn-danger m-r-5"%>
	</div>
</li>