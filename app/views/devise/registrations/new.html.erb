<div class="container">
  <div class="col-lg-3"></div>
  <div class="col-lg-6">
	<h2>Sign up</h2>

	<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "form-horizontal"}) do |f| %>
	  <%= f.error_notification %>

    <%= radio_button_tag(:client, "client") %>
    <%= label_tag(:client_option, t("registration.radio_client")) %>
    <%= radio_button_tag(:professional, "professional") %>
    <%= label_tag(:professional_option, t("registration.radio_professional")) %>
	  <div class="form-inputs">
      <%= f.input :name, required: true, autofocus: true, input_html:{class:"form-control"} %>
	    <%= f.input :email, required: true, autofocus: true, input_html: {class: "form-control"} %>
	    <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @validatable) %>
	    <%= f.input :password_confirmation, required: true %>
	    <%= f.input :cc, required:true, input_html:{type:"file"} %>
      <%= f.label :cc, "Cartao unico" %>
  </div>

	  <div class="form-actions">
	    <%= f.button :submit, "Sign up" %>
	  </div>
	<% end %>
	<%= render "devise/shared/links" %>
	</div>
	<div class="col-lg-3"></div>
</div>
