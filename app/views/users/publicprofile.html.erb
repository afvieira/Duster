<div class="content">
	<div class="panel panel-inverse">
		<div class="panel-heading">
			<div class="panel-heading-btn">
				<a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-default" data-click="panel-expand" data-original-title="" title=""><i class="fa fa-expand"></i></a>
				<a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-success" data-click="panel-reload"><i class="fa fa-repeat"></i></a>
				<a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-warning" data-click="panel-collapse"><i class="fa fa-minus"></i></a>
				<a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-danger" data-click="panel-remove" data-original-title="" title=""><i class="fa fa-times"></i></a>
			</div>
			<h4 class="panel-title">O seu perfil</h4>
		</div>
		<div class="panel-body">
			<div class="media media-lg">

				<div class="media-body">
					<div class="media-body">
					<h4 class="media-heading"><%= @euser.name%></h4>
					<p><%= @euser.description%></p>
					<p><b>Nacionalidade: </b> <%= @euser.nationality%></p>
					<p><b>Sexo:</b> <% if @euser.gender %>
						Masculino
						<%else%>
						Feminino
						<%end%></p>
					<p><b>Informação: </b>: <%= current_user.bio%></p>
					<b>Avaliação geral:</b>
					<span style="display:inline-block; width: 10px;"></span>
						<% (1..@value).each do |v| %>
							<i class="fa fa-2x fa-star"></i>
						<% end %>
				</div>
				</div>
			</div>
		</div>

    <div class="panel-body">
     <hr/>
    <div class="media media-lg">

    <ul class="timeline">
    <% @results.each do |result|%>
      <% if result.comment %>
          <li>
              <!-- begin timeline-time -->
              <div class="timeline-time">
                  <span class="date"><%= result.created_at%></span>
                  <span class="time"><%= result.created_at.strftime("%H:%M")%></span>
              </div>
              <!-- end timeline-time -->
              <!-- begin timeline-icon -->
              <div class="timeline-icon">
                  <a href="javascript:;"><i class="fa fa-home"></i></a>
              </div>
              <!-- end timeline-icon -->
              <!-- begin timeline-body -->
              <div class="timeline-body">
                  <div class="timeline-header">
                      <b> Comentário </b>
                  </div>
                  <div class="timeline-content">
                    <%= result.comment %> 
                  </div>
                  <div class="timeline-footer">
                    <% (1..result.value).each do |v| %>
                      <i class="fa fa-2x fa-star"></i>
                    <% end %>
                  </div>
              </div>
              <!-- end timeline-body -->
          </li>
      <%else%>
      <%end%>
    <%end%>
    </ul>
    </div>
    </div>
	</div>
</div>