<div class="container">
  <h1>Listing Messages</h1>

  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Message</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @guestbooks.each do |guestbook| %>
        <tr>
          <td><%= guestbook.Name %></td>
          <td><%= guestbook.Message %></td>
          <% if can? :update, @guestbook %>
            <td><%= link_to 'Show', guestbook %></td>
          <% end %>
          <% if can? :edit, @guestbook %>
            <td><%= link_to 'Edit', edit_guestbook_path(guestbook) %></td>
          <% end %>
          <% if can? :destroy, @guestbook %>
            <td><%= link_to 'Destroy', guestbook, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New message', new_guestbook_path, class: "btn btn-primary btn-lg" %>
</div>